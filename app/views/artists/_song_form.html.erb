<%= form_for [@song.artist, @song] do |f| %>

  <ul>
    <% @song.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>


  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :audio_url %>
  <%= f.text_field :audio_url %>
  <%= f.hidden_field :artist_id, value: @song.artist.id %>



  <%= f.button "Add song", type: 'button', id: :add_song %>


<% end %>
